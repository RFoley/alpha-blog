<h1 align="center">All Alpha Bloggers</h1>
<div class="pagination justify-content-center">
  <%= will_paginate %>
</div>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="card col-md-4 bg-light">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li>
          <small>
            <%= pluralize(user.articles.count, 'article') if user.articles %>
          </small>
        </li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%=
                link_to 'Delete user', user_path(user), method: :delete,
                          data: { confirm: 'Are you sure you want to delete this user and all their articles?' },
                          class: 'btn btn-xs btn-danger'
              %>
            </li>
          <% end %>
      </div>
    </ul>
  <% end %>
</div>
<div class="pagination justify-content-center">
  <%= will_paginate %>
</div>
