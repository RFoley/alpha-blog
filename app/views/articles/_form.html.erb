<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being created:</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>


<%= form_for @article do |f| %>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= f.label :title %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
    </div>
  </div>
  <div class="form-group">
    <div class="text-right col-lg-12">
      <%= f.submit class: 'btn btn-lg btn-xlarge' %>
    </div>
    <div class="text-center">
      [ <%= link_to 'Back to list of articles', articles_path %> ]
    </div>
  </div>
<% end %>